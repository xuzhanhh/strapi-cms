{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "description": {
      "type": "string",
      "required": true
    },
    "section": {
      "model": "section",
      "via": "articles"
    },
    "score": {
      "type": "decimal",
      "max": 10,
      "min": 0
    }
  }
}
